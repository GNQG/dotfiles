{
    "editor.fontFamily": "HackGenNerd",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "storage.type",
                    "support.type",
                    "support.class"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#ce537a"
                }
            },
        ]
    },
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "files.autoGuessEncoding": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.olean": true
    },
    "extensions.autoUpdate": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Spacemacs - dark",
    "workbench.colorCustomizations": {
        // baskerville - ivory dark
        //"terminal.background": "#2D2C28",
        //"terminal.foreground": "#A4A6AB",
        "terminal.ansiBlack": "#5b5955",
        "terminal.ansiRed": "#c4756e",
        "terminal.ansiGreen": "#559a6a",
        "terminal.ansiYellow": "#9b8a4b",
        "terminal.ansiBlue": "#6a8dca",
        "terminal.ansiMagenta": "#b577ac",
        "terminal.ansiCyan": "#019baa",
        "terminal.ansiWhite": "#dbdde2",
        "terminal.ansiBrightBlack": "#707277",
        "terminal.ansiBrightRed": "#f6a299",
        "terminal.ansiBrightGreen": "#82c896",
        "terminal.ansiBrightYellow": "#cab775",
        "terminal.ansiBrightBlue": "#98bbfb",
        "terminal.ansiBrightMagenta": "#e5a4db",
        "terminal.ansiBrightCyan": "#53cad9",
        "terminal.ansiBrightWhite": "#f7f9ff"
    },
    "terminal.integrated.fontFamily": "HackGenNerd Console",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "rust-client.channel": "stable",
    "markdown.preview.fontSize": 18,
    "latex-workshop.latex.autoBuild.onSave.enabled": false,
    "latex-workshop.latex.toolchain": [
        {
            "command": "latexmk",
            "args": [
                "-lualatex",
                "-synctex=1",
                "%DOC%.tex"
            ]
        },
        {
            "command": "latexmk",
            "args": [
                "-c"
            ]
        }
    ],
    "files.associations": {
        ".shrc": "shellscript"
    },
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    /*
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.tabWidth": 4,
     */
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "terminal.integrated.rendererType": "dom",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "docker.containers.label": "ImageId",
    "python.jediEnabled": false,
    "editor.columnSelection": false,
    "editor.bracketPairColorization.enabled": true,
    "redhat.telemetry.enabled": false,
    /* 
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
     */
}